<% if @work.errors.any? %>
  <h1>Errors</h1>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<p>Please provide the following information to <%= verb_name %> your book to our database:</p>

<%= form_with model: @work, class: "work-input" do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_area :creator %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :publication_year %>
  <%= f.number_field :publication_year %>

  <%= f.label :category %>
  <%= f.select :category, ["album", "book", "movie"]  %>

  <%= f.submit "#{action_name} Work", class: "work-button" %>

<% end %>
